<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/thread_reply_content"
        android:hint="@string/new_answer_content_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:paddingLeft="@dimen/nearby_list_row_start_margin"
        android:paddingStart="@dimen/nearby_list_row_start_margin"
        android:paddingRight="@dimen/nearby_list_row_start_margin"
        tools:text="this is the REPLY CONTENT and how it will be displayed"/>

    <Button
        android:id="@+id/thread_reply_post"
        android:text="@string/post_new_answer"
        android:layout_gravity="end|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>