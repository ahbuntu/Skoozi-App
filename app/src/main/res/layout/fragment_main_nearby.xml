<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/nearby_section_label"
        android:text="@string/nearby_section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <!--follow instructions here to get rid of 'Unexpected namespace errors'-->
    <!--http://stackoverflow.com/questions/15024430/android-google-maps-fragment-in-the-xml-i-get-unexpected-namespace-prefix-->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/nearby_map"
        android:layout_below="@id/nearby_section_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nearby_map_height"/>

    <!-- Scrollable content here -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/nearby_recycler"
        android:layout_below="@+id/nearby_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</RelativeLayout>
