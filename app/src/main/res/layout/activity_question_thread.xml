<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/new_toolbar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <fragment android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/thread_map"
        android:layout_below="@+id/new_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nearby_map_height"/>

    <com.megaphone.skoozi.CircularImageView
        android:id="@+id/thread_image"
        android:src="@drawable/profile"
        app:border_color="@color/accent"
        app:border_width="1dp"
        android:layout_below="@+id/thread_map"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/nearby_list_row_start_margin"
        android:layout_marginStart="@dimen/nearby_list_row_start_margin"
        android:layout_marginTop="@dimen/nearby_list_row_vertical_margin"/>


    <TextView
        android:id="@+id/thread_profile_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FirstName"
        android:textStyle="bold"
        android:layout_below="@id/thread_map"
        android:layout_toRightOf="@+id/thread_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nearby_list_row_start_margin"
        android:layout_marginStart="@dimen/nearby_list_row_start_margin"
        android:layout_marginTop="@dimen/nearby_list_row_vertical_margin"
        android:layout_marginBottom="@dimen/nearby_list_row_vertical_margin"/>


    <TextView
        android:id="@+id/thread_question_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/thread_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/new_question_horizontal_margin"
        />


    <ListView
        android:id="@+id/thread_answer_list"
        android:layout_below="@+id/thread_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>